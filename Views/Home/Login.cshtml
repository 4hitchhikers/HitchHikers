@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two:400,700|Yeseva+One" rel="stylesheet">
</head>
<body id="register_log">
    @model Hitchhikers.Models.RegisterViewModel;
    <div class="container text-center">
        <div class="row">
            <div class="col-md-3">

                <div class="aroundborderregister">
                    <form asp-controller="Home" asp-action="Register" method="POST" class="form-group">
                    <h1>Register</h1>
                        <div class="form-group">
                            <div class="padding_betweeen_valid_errors">
                                <div class="form-group"></div>
                                <input asp-for="FirstName" class="form-control" placeholder="First Name">
                                <span asp-validation-for="FirstName" class="text-danger forms_errors" ></span>
                            </div>
                            <div class="padding_betweeen_valid_errors">
                               <div class="form-group"></div>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name">
                    
                                <span asp-validation-for="LastName" class="text-danger forms_errors"></span>
                            </div>
                            <div class="padding_betweeen_valid_errors">
                                <div class="form-group"></div>
                                <input asp-for="Nickname" class="form-control" placeholder="Nickname">

                                <span asp-validation-for="Nickname" class="text-danger forms_errors"></span>
                            </div>
                    
                            <div class="padding_betweeen_valid_errors">
                                <div class="form-group"></div>
                                <input asp-for="Email" class="form-control" placeholder="Email"> 

                                <span asp-validation-for="Email" class="text-danger forms_errors"></span>
                                <span class="text-danger forms_errors">@TempData["error"]</span>
                            </div>

                            <div class="padding_betweeen_valid_errors">
                                <div class="form-group"></div>
                                <input asp-for="Password" class="form-control" placeholder="Password"> 
                    
                                <span asp-validation-for="Password" class="text-danger forms_errors"></span>
                            </div>
                            <div class="padding_betweeen_valid_errors">
                                <div class="form-group"></div>
                                <input asp-for="ConfirmedPW" class="form-control" placeholder="Confirm Password">
                        
                                <span asp-validation-for="ConfirmedPW" class="text-danger forms_errors"></span>
                            </div>
                            <div>
                                <div class="form-group"></div>
                                <button type="submit" class="btn btn-success btn-block">Create new User</button>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>


            <div class="col-md-4"></div>
            <div class="col-md-3">
                <div class="aroundborderlogin">
                    <form action="Login" method="POST" class="form-group">
                        <h1>Login</h1>
                        <div>
                            <div class="form-group"></div>
                            <input type="text" name="login_email" class="form-control" placeholder="Email"> 
                        </div>
                        <div>
                            <div class="form-group"></div>
                            <input type="password" name="loginpw" class="form-control" placeholder="Password"> 
                            <span class="text-danger forms_errors">@ViewBag.Error </span>
                        </div>

                        <div>
                            <div class="form-group"></div>
                            <input type="submit" name="login" value="Login" class="btn btn-info btn-block" >
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>





