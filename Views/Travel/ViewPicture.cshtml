<div class="row">
    @{
            <div class="row">
                <img src= "@ViewBag.Pic.PictName" class="enlargepic">
            </div>
            <div class="row">
            <h4>Description:  @ViewBag.Pic.Description</h4>
            </div>
            <div class="row">
                @if( @ViewBag.Pic.City != null){
                    <h4>Location:  @ViewBag.Pic.City,  @ViewBag.Pic.States</h4>
                }else{
                    <h4>Location:  @ViewBag.Pic.States</h4>
                }
            </div>
            <div class="row">
                <h4>Visted Date:  @ViewBag.Pic.DateVisited.ToString("MMMM dd, yyyy")</h4>
            </div>
            <div class="row">
                <h4>Uploaded by: <a href="#"> @ViewBag.Pic.Uploader.FirstName  @ViewBag.Pic.Uploader.LastName</a></h4>
            </div>
        }
</div>