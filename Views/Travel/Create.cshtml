@model Hitchhikers.Models.CreateViewModel
<form asp-controller="Travel" asp-action="AddPhoto" method="post">
    <div class="form-group">
        <p>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <br>
            <span asp-validation-for="Description" class="text-danger"></span>
            <br>
        </p>
         <p>
            <label asp-for="States"></label>
            <span asp-validation-for="States" class="text-danger"></span>
            <select class="form-control" asp-for="States" name="state">
            @{
                foreach (KeyValuePair<string, int> states in @ViewBag.all_states)
                {
                    <option value =@states.Value>@states.Key</option>
                }                
            }
            </select>
        </p>
        <p>
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="Address"></label>
            <textarea asp-for="Address" class="form-control"></textarea>
        </p>
        <p>
            <label asp-for="DateOfVisit"></label>
            <input asp-for="DateOfVisit" type="date" class="form-control"/>
            <span asp-validation-for="DateOfVisit" class="text-danger"></span>
        </p>
        <p>
            <div class="custom-file">
                <label asp-for="PictName" class="custom-file-label"></label>
                <input asp-for="PictName" class="form-control" type="file" class="custom-file-input"/>
                <span asp-validation-for="PictName" class="text-danger"></span>
            </div>
        </p>
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>